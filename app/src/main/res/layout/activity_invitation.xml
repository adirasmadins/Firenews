<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="io.github.h911002.firenews.module.me.invitation.InvitationActivity">

    <LinearLayout
        style="@style/InvitationItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_green_solid_no_stroke_oval">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/invitation_wechat"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="微信快速收徒（免邀请码）"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        style="@style/InvitationItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_blue_solid_no_stroke_oval">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/invitation_qita"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="其他平台（复制邀请码）    "
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        style="@style/InvitationItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_orange_solid_no_stroke_oval">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/invitation_erweima"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="使用二维码推广                     "
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_white_solid_grey_stroke_oval"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="好友邀请规则"
            android:textColor="@color/bg_orange"
            android:textSize="15sp"/>

        <include layout="@layout/view_line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="具体规则"
            android:textColor="@color/text_color_black"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>
