<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="IndicatedBarTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/indicated_view_title_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="IndicatedBarSingleTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11.33sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">#b3000000</item>
    </style>

    <!--邀请选项-->
    <style name="InvitationItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:drawablePadding">6dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/text_color_input</item>
        <item name="android:textColorHint">@color/text_color_default</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
