<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CommonTitleBar">
        <attr name="leftActionText" format="string"/>
        <attr name="leftActionImage" format="reference"/>
        <attr name="rightActionText" format="string"/>
        <attr name="rightActionImage" format="reference"/>
        <attr name="barTitle" format="string"/>
        <attr name="barSubTitle" format="string"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="SlidingTabLayout">
        <attr name="indicatorLineColor" format="color" />
        <attr name="indicatorTextColor" format="color" />
        <attr name="dividerMargin" format="dimension" />
        <attr name="indicatorHeight" format="dimension" />
        <attr name="indicatorContentPaddingLeft" format="dimension" />
        <attr name="indicatorContentPaddingRight" format="dimension" />
        <attr name="indicatorContentPaddingBottom" format="dimension" />
        <attr name="indicatorContentPaddingTop" format="dimension" />
        <attr name="dividerWidth" format="dimension" />
    </declare-styleable>
</resources>